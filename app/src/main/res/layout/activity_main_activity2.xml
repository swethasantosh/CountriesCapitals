 <android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerlayout"
     >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/framelayout">


        <!--xmlns:android="http://schemas.android.com/apk/res/android" -->
        <RadioGroup
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.example.swethasantosh.countriescapitals.MainActivity2"
            android:id="@+id/radiogroup"
            >
           <!-- <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textmsg"
                android:text="@string/desc"
                android:padding="5dp"
                android:paddingBottom="20dp"
                android:textStyle="bold"/>-->

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Africa"

                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/radioButton"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:onClick="onRadioButtonClicked"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asia"
                android:textStyle="bold"
                android:paddingBottom="10dp"
                android:textSize="20dp"
                android:id="@+id/radioButton2"
                android:onClick="onRadioButtonClicked"
                android:layout_below="@+id/radioButton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/radioButton"
                android:layout_alignEnd="@+id/radioButton" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Europe"
                android:textStyle="bold"
                android:paddingBottom="10dp"
                android:textSize="20dp"
                android:id="@+id/radioButton3"
                android:onClick="onRadioButtonClicked"
                android:layout_below="@+id/radioButton2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/radioButton2"
                android:layout_alignEnd="@+id/radioButton2" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="North America"
                android:id="@+id/radioButton4"
                android:paddingBottom="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:onClick="onRadioButtonClicked"
                android:layout_below="@+id/radioButton3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/radioButton3"
                android:layout_alignEnd="@+id/radioButton3" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="South America"
                android:id="@+id/radioButton5"
                android:paddingBottom="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:onClick="onRadioButtonClicked"
                android:layout_below="@+id/radioButton4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Australia"
                android:textStyle="bold"
                android:id="@+id/radioButton6"
                android:paddingBottom="10dp"
                android:textSize="20dp"
                android:onClick="onRadioButtonClicked"
                android:layout_below="@+id/radioButton4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/radioButton3"
                android:layout_alignEnd="@+id/radioButton3" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Countries"
                android:paddingBottom="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/radioButton7"
                android:onClick="onRadioButtonClicked"
                android:layout_below="@+id/radioButton5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/radioButton6"
                android:layout_alignEnd="@+id/radioButton6" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flag Quiz"
                android:paddingBottom="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/radioButton8"
                android:onClick="onRadioButtonClicked"
                android:layout_below="@+id/radioButton7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/radioButton7"
                android:layout_alignEnd="@+id/radioButton7" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name Quiz"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/radioButton9"
                android:onClick="onRadioButtonClicked"
                android:layout_below="@+id/radioButton8"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/radioButton8"
                android:layout_alignEnd="@+id/radioButton8"
                android:paddingBottom="10dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Antarctica"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/radioButton10"
                android:onClick="onRadioButtonClicked"/>


        </RadioGroup>




    </FrameLayout>
    <ListView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:id="@+id/drawerlist"

        android:background="#ff67"
        android:layout_gravity ="left">

    </ListView>

</android.support.v4.widget.DrawerLayout>

